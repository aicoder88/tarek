#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run translation validation before commit
echo "🔍 Validating translations..."
npm run translations:validate

# If validation fails, prevent commit
if [ $? -ne 0 ]; then
  echo "❌ Translation validation failed. Please fix translation issues before committing."
  echo "Run 'npm run translations:fix' to automatically fix some issues."
  exit 1
fi

echo "✅ Translation validation passed!"